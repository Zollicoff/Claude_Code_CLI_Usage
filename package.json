{
  "name": "claude-code-usage",
  "displayName": "Claude Code Usage",
  "description": "Track your Claude Code usage, costs, and analytics directly in VS Code",
  "version": "0.1.0",
  "publisher": "zollicoff",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "usage",
    "analytics",
    "cost",
    "tokens"
  ],
  "activationEvents": [
    "onCommand:claude-code-usage.showDashboard",
    "onCommand:claude-code-usage.refreshData"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-usage.showDashboard",
        "title": "Show Usage Dashboard",
        "category": "Claude Code"
      },
      {
        "command": "claude-code-usage.refreshData",
        "title": "Refresh Usage Data",
        "category": "Claude Code"
      }
    ],
    "keybindings": [
      {
        "command": "claude-code-usage.showDashboard",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zollicoff/Claude_Code_Usage_VSC_Extension"
  },
  "license": "MIT"
}
